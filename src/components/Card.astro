---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<head>
	<link rel="stylesheet" href="src/styles/styles.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,200;0,300;0,600;0,700;1,300&display=swap" rel="stylesheet">
</head>
<!DOCTYPE html>
<html lang="en">
	<div class="card">
    <h1>{title}</h1>
		<slot />
	</div>
</html>
<style>
	.card {
    background-color: var(--clr-secundary-500);
    color: var(--clr-light);
    margin: 20px 10px;
    width: 200px;
    height: 250px;
    border: 2px var(--clr-dark) solid;
    border-radius: 10px;
    padding: 10px;
  }
</style>
